<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.dcvs.nac.dcvsconnectwidget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar" >

        <receiver android:name=".DCVSConnectWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/dcvsconnect_widget_info" />
        </receiver>

        <activity android:name=".Dcvschat" />
        <activity android:name=".Dcvsfun" />
        <activity android:name=".Dcvshelp" />
    </application>

</manifest>
