<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000099cc"
    android:padding="@dimen/widget_margin">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homebtn"
        android:background="#00ffffff"
        android:contentDescription="@string/homecd"
        android:src="@drawable/rechomebtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/chatcd"
        android:src="@drawable/recchatbtn"
        android:layout_marginRight="33dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/homebtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/funcd"
        android:src="@drawable/recfun"
        android:layout_marginRight="33dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/chatbtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/helpcd"
        android:src="@drawable/dcvshelp3"
        android:layout_marginRight="33dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/funbtn" />

</RelativeLayout>