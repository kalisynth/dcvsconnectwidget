<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000099cc"
    android:padding="@dimen/widget_margin">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/widgetbg"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/wbg3"
        android:contentDescription="@string/widgetbackdrop" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homebtn"
        android:background="#00ffffff"
        android:contentDescription="@string/homecd"
        android:src="@drawable/btnhomemed"
        android:layout_alignTop="@+id/funbtn"
        android:layout_toEndOf="@+id/chatbtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chatbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/chatcd"
        android:src="@drawable/dcvsbtnchat2"
        android:layout_alignTop="@+id/homebtn"
        android:layout_toEndOf="@+id/funbtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/funbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/funcd"
        android:src="@drawable/dcvsbtnfun2"
        android:layout_alignTop="@+id/helpbtn"
        android:layout_toEndOf="@+id/helpbtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpbtn"
        android:background="#00ffffff"
        android:contentDescription="@string/helpcd"
        android:src="@drawable/dcvsbtnhelp"
        android:layout_alignBottom="@+id/widgetbg"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/btnhometempsymbol"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/homebtn"
        android:layout_toEndOf="@+id/homebtn" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:background="#00ffffff"
        android:src="@drawable/btnhometempsymbolplustext"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton3"
        android:src="@drawable/btnhometempsymbolplustext_copy"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

</RelativeLayout>