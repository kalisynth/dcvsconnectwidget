<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.dcvs.nac.dcvsconnectwidget.Dcvsgames"
    android:background="@drawable/dcvsgamesbg">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/euchrebtn"
        android:background="@drawable/dcvseuchrebtn"
        android:contentDescription="@string/euchrecd"
        android:onClick="euchreonclick"
        android:layout_marginTop="100dp"
        android:layout_marginStart="100dp"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/solitarebtn"
        android:background="@drawable/dcvssolitarebtn"
        android:contentDescription="@string/solitarecd"
        android:onClick="solitareonclick"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/euchrebtn"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backgammonbtn"
        android:background="@drawable/dcvsbackgammonbtn"
        android:contentDescription="@string/backgammoncd"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/solitarebtn"
        android:onClick="backgammononclick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chessbtn"
        android:background="@drawable/dcvschessbtn"
        android:contentDescription="@string/chesscd"
        android:layout_marginStart="100dp"

        android:layout_below="@+id/euchrebtn"
        android:onClick="chessonclick" />


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/finarbtn"
        android:background="@drawable/dcvsfinarowbtn"
        android:contentDescription="@string/finarcd"
        android:layout_toEndOf="@+id/chessbtn"
        android:layout_below="@+id/solitarebtn"
        android:onClick="finaronclick" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sudokubtn"
        android:background="@drawable/dcvssudokubtn"
        android:contentDescription="@string/sudokucd"
        android:layout_toEndOf="@+id/finarbtn"
        android:layout_below="@+id/backgammonbtn"
        android:onClick="sudokuonclick" />
</RelativeLayout>
