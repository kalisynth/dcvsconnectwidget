<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.dcvs.nac.dcvsconnectwidget.Dcvshelp"
    android:background="@drawable/dcvshelplite">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remotebtn"
        android:background="#00ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/remotecd"
        android:onClick="quicksupportclick"
        android:src="@drawable/dcvsrectquicksupport" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/helpguidebtn"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="#00ffffff"
        android:contentDescription="@string/helpguidecd"
        android:onClick="helpguideonclick"
        android:src="@drawable/dcvsrecthelpguide" />
</RelativeLayout>
